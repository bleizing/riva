<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgorund_polos"
    tools:context="bleizing.riva.fragment.GrafikFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/gradient_biru_hijau">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="GRAFIK TINGKAT GLUKOSA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRAFIK"
                android:textSize="15sp"
                android:textColor="@color/biru_tua"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"/>

            <Spinner
                android:id="@+id/spin_kategori"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/biru_muda"
            android:layout_alignParentEnd="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 Januari 2018"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center_vertical">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="Lihat Catatan Tanggal"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/montserrat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="17/01/2017"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/hijau"
                android:fontFamily="@font/montserrat"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="18/01/2017"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/hijau"
                android:fontFamily="@font/montserrat"/>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="TAMBAH KADAR GULA DARAH"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:background="@color/biru_muda"/>
    </RelativeLayout>

</LinearLayout>
